{% if app.user %}
    <nav class="navbar navbar-expand-lg navbar-dark">
        <a class="navbar-brand" href="{{ path('main_redirect') }}">
            <img src="{{ asset('img/logo_sortir_com.gif') }}" alt="Sortir.com : Votre Plateforme de Sorties dédiée aux Stagiaires ENI" title ="Sortir.com : Votre Plateforme de Sorties dédiée aux Stagiaires ENI">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item {% if app.request.attributes.get('_route') == 'main_redirect' %}active{% endif %}">
                    <a class="nav-link" href="{{ path('main_redirect') }}">Accueil</a>
                </li>
                <li class="nav-item {% if app.request.attributes.get('_route') == 'profil_view' %}active{% endif %}">
                    <a class="nav-link" href="{{ path('profil_view') }}">Mon Profil</a>
                </li>
                <li class="nav-item {% if app.request.attributes.get('_route') == 'campus_viewList' %}active{% endif %}">
                    <a class="nav-link" href="{{ path('campus_viewList') }}">Campus</a>
                </li>
                <li class="nav-item {% if app.request.attributes.get('_route') == 'ville_viewList' %}active{% endif %}">
                    <a class="nav-link" href="{{ path('ville_viewList') }}">Villes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path("security_logout") }}">Déconnexion ({{ app.user.pseudo }})</a>
                </li>
            </ul>
        </div>
    </nav>
{% else %}
    <div class="container">
        <a href="{{ path('main_redirect') }}">
            <img src="{{ asset('img/logo_sortir_com.gif') }}" alt="Sortir.com : Votre Plateforme de Sorties dédiée aux Stagiaires ENI" title="Sortir.com : Votre Plateforme de Sorties dédiée aux Stagiaires ENI">
        </a>
    </div>
{% endif %}